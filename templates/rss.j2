<?xml version="1.0" ?>
<div>
  <p>
    <strong>Package:</strong> {{pkg_data['name']}}<br/>
    <strong>Summary:</strong> {{pkg_data['summary']}}
  </p>
  <p>
    <strong>Description:</strong><br/>
    {{pkg_data['description']}}
  </p>
  <h3>Changes:</h3>
  <table border="0" cellpadding="0" cellspacing="5">
{% for e, v, r, a, built, size, loc, author, log, added, _ in pkg_data['rpms'] %}
    <tr>
      <td valign="top">
        <a href="{{url}}/{{loc}}">{{pkg_data['name']}}-{{v}}-{{r}}-{{a}}</a>
        [<span style="white-space: nowrap">{{size}}</span>]
      </td>
{% if log is not none %}
      <td valign="top">
        <strong>Changelog</strong> by <span>{{author}} ({{added|ymd}})</span>:
        <pre style="margin: 0pt 0pt 5pt 5pt">{{log}}</pre>
      </td>
{% else %}
      <td valign="top">
        <em>(no changelog entry)</em>
      </td>
{% endif %}
    </tr>
{% endfor %}
  </table>
</div>
